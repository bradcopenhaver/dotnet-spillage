@{
    ViewData["Title"] = "Ask a Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PileSpillage.Models.Question

<form asp-controller="Question" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Text"></label>
        <input class="form-control" asp-for="Text" value="" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <input class="btn" type="submit" value="Post Question" />
</form>